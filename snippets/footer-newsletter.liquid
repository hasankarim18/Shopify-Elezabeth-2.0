<style>
  #button-hover-1 {
    position: relative;
    padding: 10px 30px;
    overflow: hidden;
    display: inline-block;
    /* background-color: black; */
    color: white;
    border: 1px solid black;
    cursor: pointer;
    transition: color 0.4s ease-in-out;
  }
  #button-hover-1::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: white;
    transition: left 0.4s cubic-bezier(0.46, 0.03, 0.74, 0.75);
    z-index: 1;
    visibility: hidden;
  }
  #button-hover-1::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    transition: left 0.4s cubic-bezier(0.46, 0.03, 0.74, 0.75);
    z-index: 1;
  }

  #button-hover-1:hover {
    color: black;
  }

  #button-hover-1:hover::before {
    left: 101%;
    background-color: black;
    visibility: visible;
  }
  #button-hover-1:hover::after {
    left: -101%;
    visibility: hidden;
    background-color: white;

  }
  #button-hover-1 span {
    position: relative;
    z-index: 2;
  }

</style>

