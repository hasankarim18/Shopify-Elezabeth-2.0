<div style="
  padding-top:{{ section.settings.padding_top }}px;
  padding-bottom:{{ section.settings.padding_bottom }}px;
 " class="contact-form ">
  <div class="container">
    {% comment %} #section title {% endcomment %}

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'section-title' %}
          {% assign text_align = block.settings.title_align %}
          <div class="my-4">
            <h3 class="text-3xl {{ text_align }} ">{{ block.settings.section_title }}</h3>
          </div>
        {% when 'contact-form' %}
          <div class="my-4">
            <div class="max-w-screen-lg mx-auto p-5">
              <div class="grid grid-cols-1 md:grid-cols-12 border">
                <div class="bg-gray-900 md:col-span-4 p-10 text-white">
                  <p class="mt-4 text-sm leading-7 font-regular uppercase">
                    {{ block.settings.form_sub_title }}
                  </p>
                  <h3 class="text-3xl sm:text-4xl leading-normal font-extrabold tracking-tight">
                    {{ block.settings.form_title_white }}
                    <span style="color:{{ block.settings.title_accent }}" class="">{{ block.settings.form_title_accent }}</span>
                  </h3>
                  {% comment %} message {% endcomment %}
                  <p class="mt-4 leading-7 text-gray-200">
                    {{ block.settings.contact_message }}
                  </p>

                  <div class="flex items-center mt-5">
                    {% comment %} icon house {% endcomment %}
                    {% render 'icon-house' %}
                    <span class="text-sm">
                      {{ block.settings.address }}
                    </span>
                  </div>
                  <div class="flex items-center mt-5">
                    {% comment %} icon phone {% endcomment %}
                    {% render 'icon-phone' %}
                    <span class="text-sm">
                      {{ block.settings.phone }}
                    </span>
                  </div>
                  <div class="flex items-center mt-5">
                    {% comment %} icon clock {% endcomment %}
                    {% render 'icon-clock' %}
                    <span class="text-sm">
                      {{ block.settings.office_hour }}
                    </span>
                  </div>

                </div>
                <form class="md:col-span-8 p-10">
                  <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                        {{ block.settings.first_name }}
                      </label>
                      <input
                        class="appearance-none block w-full bg-gray-200 text-gray-700 border  rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                        id="grid-first-name"
                        type="text"
                        placeholder="Jane">
                      <p class="text-red-500 text-xs italic">Please fill out this field.</p>
                    </div>
                    <div class="w-full md:w-1/2 px-3">
                      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                        {{ block.settings.last_name }}
                      </label>
                      <input
                        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                        id="grid-last-name"
                        type="text"
                        placeholder="Doe">
                    </div>
                  </div>
                  <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                        {{ block.settings.email }}
                      </label>
                      <input
                        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                        id="grid-email"
                        type="email"
                        placeholder="********@*****.**">
                    </div>
                  </div>

                  <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full px-3">
                      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                        {{ block.settings.message }}
                      </label>
                      <textarea rows="10" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"></textarea>
                    </div>
                    <div class="flex justify-between w-full px-3">
                      <div class="md:flex md:items-center">
                        <label class="block text-gray-500 font-bold">
                          <input class="mr-2 leading-tight" type="checkbox">
                          <span class="text-sm">
                            Send me your newsletter!
                          </span>
                        </label>
                      </div>
                      <button class="shadow bg-indigo-600 hover:bg-indigo-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-6 rounded" type="submit">
                        Send Message
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        {% else %}
          <div></div>
      {% endcase %}
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Contact form-1",
    "tag": "section",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "default": 10,
        "label": "Padding top",
        "min": 10,
        "max": 100,
        "step": 5
      },
      {
        "type": "range",
        "id": "padding_botton",
        "default": 10,
        "label": "Padding top",
        "min": 10,
        "max": 100,
        "step": 5
      }
    ],
    "blocks": [
      {
        "type": "section-title",
        "name": "Section Title",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "section_title",
            "label": "Section Title",
            "default": "Section Contact From"
          },
          {
            "type": "select",
            "id": "title_align",
            "label": "Ttitle text align",
            "default": "text-center",
            "options": [
              {
                "label": "Left",
                "value": "text-left"
              },
              {
                "label": "Center",
                "value": "text-center"
              },
              {
                "label": "Right",
                "value": "text-right"
              }
            ]
          }
        ]
      },
      {
        "type": "contact-form",
        "name": "Contact Form",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "form_sub_title",
            "label": "Form Sub Title",
            "default": "Contact"
          },
          {
            "type": "text",
            "id": "form_title_white",
            "label": "Form Title",
            "default": "Get in"
          },
          {
            "type": "text",
            "id": "form_title_accent",
            "label": "Form Title Accent",
            "default": "touch"
          },
          {
            "type": "color",
            "id": "title_accent",
            "label": "Title accent",
            "default": "#4f46e5"
          },
          {
            "type": "textarea",
            "id": "contact_message",
            "label": "Short message",
            "default": "lorem lorem lorem lorem lorem lorem lorem lorem lorem lorem lorem lorem "
          },
          {
            "type": "text",
            "id": "address",
            "label": "Address",
            "default": "House #14, Street #12, Eskaton Road, Dhaka, Bangladesh."
          },
          {
            "type": "text",
            "id": "phone",
            "label": "Phone",
            "default": "+88*******"
          },
          {
            "type": "text",
            "id": "office_hour",
            "label": "Office hour",
            "default": "24/7"
          },
          {
            "type": "text",
            "id": "first_name",
            "label": "First Name",
            "default": "First Name"
          },
          {
            "type": "text",
            "id": "last_name",
            "label": "Last Name",
            "default": "last name"
          },
          {
            "type": "text",
            "id": "email",
            "label": "Email",
            "default": "Email"
          },
          {
            "type": "textarea",
            "id": "message",
            "label": "your message",
            "default": "Your message"

          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Contact form-1",
        "settings": {},
        "blocks": [
          {
            "type": "section-title"
          },
          {
            "type": "contact-form"

          }
        ]
      }
    ]
  }
{% endschema %}