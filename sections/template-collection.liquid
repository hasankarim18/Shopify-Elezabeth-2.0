<div class="container my-4">
  <h3 class="py-4 text-3xl text-indigo-600">
    {{ collection.title }}
  </h3>
  {% if collection.products_count > 0 %}
    {% paginate collection.products by 3 %}
      <ul class="w-fit gap-4 mx-auto grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 justify-items-center justify-center ">

        {% for product in collection.products %}
          {% render 'product-card'
            , product: product %}
        {% endfor %}
      </ul>
      <div class="mt-4">
        {% render 'pagination'
          , paginate: paginate %}
      </div>
    {% endpaginate %}
  {%- else -%}
    <h2 class="text-center text-4xl font-semibold text-indigo-600">
      No product available in this collection
    </h2>
  {% endif %}


</div>