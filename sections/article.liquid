<div class="article">
  <div class="container">
    <div class="mb-6">
      <a href="{{ blog.url }}">
        {{ blog.title }}</a>
      / {{ article.title }}
    </div>
    <h1 class="text-center text-3xl mb-4">
      {{ article.title }}
    </h1>
    <div class="article-content mb-6">
      <div class="float-left mr-4 mb-4">
        <img
          width="400"
          height="400"
          src="{{ article.image |  image_url }}">
      </div>
      <div class="">
        {{ article.content }}</div>

    </div>
  </div>
</div>

<style>
  .article-content {}
.article-content h2 {
  font-weight: 700;
  font-size: 24px;
}
.article-content p {
  margin-bottom: 10px;
}
</style>