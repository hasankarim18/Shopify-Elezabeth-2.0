<div data-aos="fade-up" class="featrued-product">

  {% assign product = all_products[section.settings.selected_product] %}

  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <img
          src="{{ product.featured_image |  image_url }}"
          width=""
          height=""
          class="w-full h-80"
          alt="">
      </div>
      <div>
        <h3 class="text-3xl">{{ product.title }}</h3>
        <div>
          <a href="{{ product.url }}">View detail</a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Product 1",
    "tag": "section",
    "settings": [
      {
        "type": "product",
        "id": "selected_product",
        "label": "Select Your Product"
      }
    ],
    "presets": [
      {
        "name": "Featured Product 1",
        "settings": {}
      }
    ]
  }
{% endschema %}