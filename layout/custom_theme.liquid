<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}

    <script defer src="{{'application.js' | asset_url }}"></script>
    {% comment %} {{ 'application.js' | asset_url | script_tag }} 
                                                                                                                                                                  {% endcomment %}
    <script defer src="{{ 'alpine.min.js' |  asset_url }}"></script>
  {% comment %}  {% endcomment %}
  {% comment %} <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script> {% endcomment %}
  </head>
  <body class="{{ template.name }}">
    {% section 'header' %}
    <main role="main">
      <div class="bg-red-50">
        <h2 class="my-4 font-bold text-red-400 text-xl text-center">I am a custom layout</h2>
        {{ content_for_layout }}
      </div>
    </main>
  </body>
</html>